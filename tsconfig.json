{
  "compileOnSave"  : false,
  "compilerOptions": {
    "allowJs"                       : true,
    "baseUrl"                       : ".",
    "declaration"                   : true,
    "declarationDir"                : "lib",
    "emitDecoratorMetadata"         : true,
    "esModuleInterop"               : true,
    "experimentalDecorators"        : true,
    "jsx"                           : "react",
    "importsNotUsedAsValues"        : "error",
    "inlineSourceMap"               : false,
    "inlineSources"                 : false,
    "lib"                           : [
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module"                        : "esnext",
    "moduleResolution"              : "node",
    "outDir"                        : "lib",
    "paths"                         : {
      "~/*": ["./src/*"]
    },
    "skipDefaultLibCheck"           : true,
    "skipLibCheck"                  : true,
    "sourceMap"                     : true,
    "strict"                        : true,
    "suppressImplicitAnyIndexErrors": true,
    "target"                        : "esnext"
  },
  "include"        : [
    "src/**/*.ts",
    "src/**/*.js",
    "declarations/*.d.ts"
  ],
  "exclude"        : [
    "**/node_modules/**",
    "~*",
    ".*"
  ]
}
